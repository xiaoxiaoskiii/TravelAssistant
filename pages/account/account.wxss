/* pages/account/account.wxss */
page {
  overflow: hidden;
  height: 100%;
}
.pay-money{
  height: 38px;
  color: #0086f6;
}
.select-consumption-patterns {
  width: 100%;
}

.consumption-patterns-item {
  width: 25%;
  display: inline-block;
  position: relative;
}

.consumption-patterns-item-icon {
  width: 100rpx;
  height: 100rpx;
}

.pay-money {
  margin: 20rpx;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
}

.money-icon {
  width: 32rpx;
  height: 32rpx;
}

.date-text {
  color: rgb(179, 179, 179);
  flex: 1;
  text-align: end;
}

.money-text {
  color: red;
  flex: 1;
  text-align: end;
}

.calculator {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 999;
  display: flex;
  background-color: rgb(253, 253, 253);
  border: 1rpx solid rgb(255, 255, 255);
   box-sizing: border-box;
   height: 500rpx;
}

.calculator-number {
  flex: 3;
  width: 75%;
  height: 100%;
  box-sizing: border-box;
}

.calculator-number-item {
  width: 100%;
  display: flex;
  height: 25%;
  box-sizing: border-box;
}

.number {
  flex: 1;
  text-align: center;
  vertical-align: middle;
  border: 1rpx solid #0087f691;
  border-radius: 5%;
  width: 100%;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  height: 100%;
}
.number-hover{
background-color: #5dbeff;
}

.calculator-operator {
  flex: 1;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  border-radius: 5%;
}

.operator {
  border: 2rpx solid #0086f6;
  flex: 2;
  text-align: center;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  border-radius: 5%;
  box-sizing: border-box;
}
